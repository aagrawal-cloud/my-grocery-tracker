 <div>
  <a href="/lists">My Stores</a>
 </div>

 <div>
  <a href="/view_lists">My Lists</a>
 </div>

 <div>
    <h1>
      My Pantry
    </h1>
  </div>

  <table border="1">
    <tr>
      <th>Item
      </th>
      <th>Store
      </th>
      <th>Quantity
      </th>
      <th>Quantity unit
      </th>
      <th>Price
      </th>
      <th>
      </th>
    </tr>

    <% @the_item.each do |each_item|%>
      <% if each_item.pantry_id == true %>
    
        <tr>
      

          <td><%= each_item.item_name %>
          </td>
          <td><%= each_item.list.list_name %>
          </td>
          <td><%= each_item.quantity %>
          </td>
          <td><%= each_item.quantity_value %>
          </td>
          <td><%= each_item.price %>
          </td>
          <td>
            <form action="/item_to_list/<%= each_item.id %>" method="post">
              <button>Buy</button>
            </form>
          </td>
      
        </tr>
      <% end %>
    <% end %>
  </table>