<div>
  <div>
    <h1>
      List of all lists
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new list
    </h2>

    <form action="/insert_list" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="item_id_box">
          Item
        </label>

        <input type="text" id="item_id_box" name="query_item_id">
      </div>

      <div>
        <label for="list_name_box">
          List name
        </label>

        <input type="text" id="list_name_box" name="query_list_name">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="datetime-local" id="date_box" name="query_date">
      </div>

      <div>
        <label for="pantry_id_box">
          Pantry
        </label>

        <input type="text" id="pantry_id_box" name="query_pantry_id">
      </div>

      <div>
        <label for="items_count_box">
          Items count
        </label>

        <input type="text" id="items_count_box" name="query_items_count">
      </div>

      <button>
        Create list
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Item
        </th>

        <th>
          List name
        </th>

        <th>
          Date
        </th>

        <th>
          Pantry
        </th>

        <th>
          Items count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_lists.each do |a_list| %>
      <tr>
        <td>
          <%= a_list.id %>
        </td>

        <td>
          <%= a_list.user_id %>
        </td>

        <td>
          <%= a_list.item_id %>
        </td>

        <td>
          <%= a_list.list_name %>
        </td>

        <td>
          <%= a_list.date %>
        </td>

        <td>
          <%= a_list.pantry_id %>
        </td>

        <td>
          <%= a_list.items_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_list.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_list.updated_at) %> ago
        </td>

        <td>
          <a href="/lists/<%= a_list.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
