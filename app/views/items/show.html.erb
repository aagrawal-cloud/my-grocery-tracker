<div>
  <div>
    <h1>
      <%= @the_item.item_name %>
    </h1>

    <div>
      <div>
        <a href="/items">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_item/<%= @the_item.id %>">
          Delete item
        </a>
      </div>
    </div>

    <br>


<table border="1">
  <tr>
    <th>Item Name</th>
    <th>Store</th>
    <th>Quantity</th>
    <th>Quantity Unit</th>
    <th>Price</th>
  </tr> 
  <tr>
    <td>
      <%= @the_item.item_name %>
    </td>
    <td>
      <%= @the_item.list.list_name %>
    </td>
    <td>
      <%= @the_item.quantity %>
    </td>
    <td>
      <%= @the_item.quantity_value %>
    </td>
    <td>
      <%= @the_item.price %>
    </td>
   </tr> 
</table>

<hr>

<div>
  <div>
    <h2>
      Edit item
    </h2>

    <form action="/modify_item/<%= @the_item.id %>"  method="post" >
      <div>
        <label for="item_name_box">
          Item name
        </label>

        <input type="text" id="item_name_box" name="query_item_name" value="<%= @the_item.item_name %>">
      </div>
      
      <div>
        <label for="list_id_box">
          Store
        </label>

        <select id="list_id_box" name="query_list_name">
        <% List.all.each do |a_list|%>
          <option>
            <%= a_list.list_name%>
          </option>
        <% end %>
      </select>
      </div>

      <div>
        <label for="quantity_box">
          Quantity
        </label>

        <input type="text" id="quantity_box" name="query_quantity" value="<%= @the_item.quantity %>">
      </div>

      <div>
        <label for="quantity_value_box">
          Quantity unit
        </label>

        <input type="text" id="quantity_value_box" name="query_quantity_value" value="<%= @the_item.quantity_value %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_item.price %>">
      </div>

      

      <!--User is not updating the pantry in this page
      <div>
        <label for="pantry_id_box">
          Pantry
        </label>

        <input type="text" id="pantry_id_box" name="query_pantry_id" value="<%= @the_item.pantry_id %>">
      </div> -->

      <button>
        Update item
      </button>
    </form>
  </div>
</div>

<hr>
