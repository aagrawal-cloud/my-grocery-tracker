<div>
  <div>
    <h1>
      List of all items
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new item
    </h2>

    <form action="/insert_item" method="post">
      <div>
        <label for="item_name_box">
          Item name
        </label>

        <input type="text" id="item_name_box" name="query_item_name">
      </div>

      <div>
        <label for="list_id_box">
          Store
        </label>

        <%# <input type="text" id="list_id_box" name="query_list_id">
      </div> %>
      
      <select id="list_id_box" name="query_list_name">
        <% List.all.where({ :user_id => @current_user.id}).each do |a_list|%>
          <option>
            <%= a_list.list_name%>
          </option>
        <% end %>
      </select>
      </div>

      <div>
        <label for="quantity_box">
          Quantity
        </label>

        <input type="text" id="quantity_box" name="query_quantity">
      </div>

      <div>
        <label for="quantity_value_box">
          Quantity unit
        </label>

        <input type="text" id="quantity_value_box" name="query_quantity_value">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <%# <div>
        <label for="pantry_id_box">
          Pantry
        </label>

        <input type="text" id="pantry_id_box" name="query_pantry_id">
      </div> %>

      <button>
        Create item
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Item name
        </th>

        <th>
          Store
        </th>

        <th>
          Quantity
        </th>

        <th>
          Quantity unit
        </th>

        <th>
          Price
        </th>

        <!--<th>
          Pantry
        </th>-->

        <!--<th>
          Created at
        </th>

        <th>
          Updated at
        </th>-->

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_items.each do |an_item| %>
      <tr>
        <td>
          <%= an_item.id %>
        </td>

        <td>
          <%= an_item.item_name %>
        </td>

        <td>
          <%#= an_item.list.list_name %>
          <%= an_item.list.list_name %>
        </td>

        <td>
          <%= an_item.quantity %>
        </td>

        <td>
          <%= an_item.quantity_value %>
        </td>

        <td>
          <%= an_item.price %>
        </td>

        <!--<td>
          <%= an_item.pantry_id %>
        </td>-->

        <!--<td>
          <%= time_ago_in_words(an_item.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_item.updated_at) %> ago
        </td>-->

        <td>
          <a href="/items/<%= an_item.id %>">
            Show details
          </a>
        </td>

        <td>
          <a href="/delete_item/<%= an_item.id %>">
          Delete
        </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
